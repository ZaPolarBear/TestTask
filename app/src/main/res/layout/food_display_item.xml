<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <data>
        <variable
            name="foodModel"
            type="com.zpb.testtask.models.FoodDisplayModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/food_image"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="173dp"
        android:gravity="top"
        android:textAppearance="@style/food_name" />

    <TextView
        android:id="@+id/food_description"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="28dp"
        android:textAppearance="@style/food_description"
        android:gravity="top"
        />

    <Button
        android:id="@+id/price_btn"
        android:layout_width="87dp"
        android:layout_height="32dp"
        android:background="@drawable/price"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="105dp"

        />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="87dp"
        android:layout_height="32dp"
        android:background="#00000000"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="105dp"
        android:textAppearance="@style/price"
        android:gravity="top"
        />
</RelativeLayout>
</layout>